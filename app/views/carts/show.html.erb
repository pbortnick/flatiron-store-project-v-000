<h1>Your Cart</h1>

<% @current_cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency(line_item.item.price.to_f/100) %> | Quantity: <%= line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>

<p>Order total: <strong><%= number_to_currency(@current_cart.total.to_f/100) %></strong> </p>

<% if @current_cart && @current_cart.status == "unsubmitted" %>
  <%= form_tag cart_path(@current_cart), method: :get do %>
    <%= submit_tag "Checkout" %>
  <% end %>
<% else %>
  <%= button_to 'Continue shopping', store_path, method: :get %>
<% end %>
